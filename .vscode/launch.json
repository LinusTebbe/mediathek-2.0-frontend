{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "client: chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "server: nuxt",
            "args": ["dev"],
            "osx": {
              "program": "${workspaceFolder}/node_modules/.bin/nuxt"
            },
            "linux": {
              "program": "${workspaceFolder}/node_modules/.bin/nuxt"
            },
            "windows": {
              "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.js"
            }
        },
        {
            "type": "php",
            "name": "api: laravel",
            "request": "launch",
            "port": 8000,
            "preLaunchTask": "Kill PHP Server",
            "program": "C:/Users/Niklas Limberg/PhpstormProjects/mediathek-2.0-backend/artisan", // Could be any other shell command
            "args": [
                "serve"
            ],
            "postDebugTask": "Kill PHP Server", 
            "cwd": "C:/Users/Niklas Limberg/PhpstormProjects/mediathek-2.0-backend"
        }
    ],
    "compounds": [
        {
            "name": "fullstack: nuxt",
            "configurations": [
                "api: laravel",
                "server: nuxt",
                "client: chrome"
            ]
        }
    ]
}